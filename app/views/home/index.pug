extends ../layouts/default.pug

block page-header

block content
  body
  div#fixture-form
    h2 FIXTURES
    form(action='/api/fixtures' method='POST')
      input#fixtureTitle(type='string' name='tournament_title'  readonly)
      option Choose Team1 
      select#selectTeam1(name='team1')
      option Choose Team2  
      select#selectTeam2(name='team2')      
      br
      option Stadium
      select(name='stadium')
        option(value='Dasthrath Stadium') Dashrath Stadium
        option(value='Pokhara Stadium') Pokhara Stadium
        option(value='ANFA Stadium') ANFA Stadium
        //- option(value='Halchowk Stadium') Halchowk Stadium
      br
      | Date : 
      input(type='date' name='date' )
      br
      | Time:
      input(type='time' name='time' )
      br
      input(type='submit' value='Submit')
      br
    //form with player
  div#player-form
    h2 Player Detail
    form(action='/api/players' method='POST')
      input#tournament_title(type='text' name='tournament_title' hidden)
      option Choose a Team
      select#selectTeam(name='team_name')
      br
      | First Name:
      input(type='text' name='fname' )
      br
      | Last Name:
      input(type='text' name='lname' )
      br
      | Date of Birth:
      input(type='date' name='dob' )
      br
      option Position
      select(name='position')
        option(value='GK') GoalKeeper 
        option(value='DF') Defender
        option(value='MD') Midfielder
        option(value='FW') Forward
      br
      | Jersey Number:
      input(type="number" name='jersey_no' )
      br
      input(type='submit' value='Submit')
  //form with team detail
  div#team-form
    h2 Team Detail
    form(action='/api/teams' method='POST')
      input#teamTitle(type='string' name='tournament_title' readonly)
      | Team Name:
      input(type='text' name='name' )
      br
      | Location:
      input(type='text' name='location' )
      br
      | Logo 
      input(type='text' name='logo' )
      br
      | Manager:
      input(type='text' name='manager' )
      br
      input(type='submit' value='Submit')
  div#result-form 
    h2 Result
    form(action='/api/results' method='POST')
      input#resultTitle(type='string' name='tournament_title'  readonly)
      option Choose Fixture
      select#selectFixture(name='fixtureResult')
      br
      | Score:
      input(type='number' name='score' )
      input(type='number' name='score' )
      br
      | Offside:
      input(type='number' name='offsides' )
      input(type='number' name='offsides' )
      br
      | Fouls:
      input(type='number' name='fouls' )
      input(type='number' name='fouls' )
      br
      | Corners:
      input(type='number' name='corners' )
      input(type='number' name='corners' )
      br
      | Shots:
      input(type='number' name='shots' )
      input(type='number' name='shots' )
      br
      input(type='submit' value='Submit')
  div#edit-form
    h2 Edit Fixture
    form(action='/api/editFixtures/' method='POST')
      option Choose Fixture
      select#selectFixture1(name='fixname')
      br
      label Postponed?
      label.toggle-switch
        input#checkbox.checkbox(type='checkbox' name='postponed' value='true')
        span.switch-btn
      br
      | Date : 
      input(type='date' name='date' )
      br
      | Time:
      input(type='time' name='time' )
      br
      option Stadium
      select(name='stadium')
        option(value='Dasthrath Stadium') Dashrath Stadium
        option(value='Pokhara Stadium') Pokhara Stadium
        option(value='ANFA Stadium') ANFA Stadium
      br
      input(type='submit' value='Submit')
  div#edit-results
    h2 Edit Results 
    form(action='/api/editResults/' method='POST')
      option Choose Result 
      select#selectResult(name='fixtureResult')
      //- br
      //- | Score:
      //- input(type='number' name='score' )
      //- input(type='number' name='score' )
      br
      | Offside:
      input(type='number' name='offsides' )
      input(type='number' name='offsides' )
      br
      | Fouls:
      input(type='number' name='fouls' )
      input(type='number' name='fouls' )
      br
      | Corners:
      input(type='number' name='corners' )
      input(type='number' name='corners' )
      br
      | Shots:
      input(type='number' name='shots' )
      input(type='number' name='shots' )
      br
      input(type='submit' value='Submit') 
  div#tournament-form 
    h2 Tournament-Form
    form(action='/api/tournaments' method='POST')
      | Tournament Title:
      input(type='text' name='title' )
      br
      | Stadium :
      input(type='text' name='stadium' )
      br
      input(type='submit' value='Submit')



